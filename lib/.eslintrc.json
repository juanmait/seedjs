{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "impliedStrict": true,
    "allowImportExportEverywhere": false
  },
  "env": {
    "node": false,
    "browser": false
  },
  "extends": ["eslint:recommended", "prettier"],
  "overrides": [
    {
      "files": ["*.test.js", "*.spec.js", "__test__/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ],
  "globals": {
    /**
     * commonjs globals
     */
    "module": true,
    "exports": true,
    "require": true,

    /**
     * dev globals
     */
    "process": true,

    /**
     * common globals (node/browser)
     */
    "console": true,
    "clearImmediate": true,
    "clearInterval": true,
    "clearTimeout": true,
    "setImmediate": true,
    "setInterval": true,
    "setTimeout": true
  }
}
