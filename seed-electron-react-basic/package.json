{
  "name": "seed-electron-react-basic",
  "description": "showcases a setup to work with [react] in [electron] without using create-react-app or webpack.",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn compile",
    "checkEslint": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "checktypes": "tsc",
    "clean": "rm -rf build",
    "compile": "NODE_ENV=production babel src --out-dir build --extensions '.ts,.js,.jsx,.tsx,.svg' --ignore 'src/**/*.spec.ts,src/**/*.spec.js,src/**/*.test.ts,src/**/*.test.js,src/eslint-no-cry.js'",
    "fix": "prettier-eslint 'src/**/*.+(js|jsx|ts|tsx)' --write",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "prebuild": "yarn clean; yarn fix && yarn lint && yarn checktypes",
    "start": "NODE_ENV=development electron --require ./script/register.js src/main/index.ts",
    "test": "yarn jest",
    "watch": "yarn compile --watch"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "author": {
    "name": "Juan M. CaÃ±abate (@juanmait)"
  },
  "keywords": [
    "scaffolding",
    "typescript",
    "prettier",
    "jest"
  ],
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@types/electron-is-dev": "^1.1.1",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "babel-plugin-react-require": "^3.1.1",
    "babel-preset-react-app": "^9.0.0",
    "concurrently": "^4.1.1",
    "electron": "5.0.7",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react-app-fix-override": "^4.0.1",
    "eslint-plugin-flowtype": "^3.12.1",
    "eslint-plugin-import": "^2.18.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "prettier-eslint-cli": "^5.0.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn fix-ts",
      "yarn lint-ts",
      "yarn checkTypes"
    ],
    "*.{js}": [
      "yarn fix-js",
      "yarn lint-js"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
