{
  "name": "seed-lib-node",
  "description": "This setup is for development of libraries that should run on **NodeJS only**.",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"yarn build:dev --watch\" \"yarn build:types --watch\"",
    "test": "jest",
    "build:dev": "yarn clean; NODE_ENV=development BABEL_ENV=development babel src --out-dir build --extensions '.ts,.js' --source-maps inline --ignore 'src/**/*.spec.ts,src/**/*.spec.js,src/**/*.test.ts,src/**/*.test.js,src/eslint-no-cry.js'",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap --isolatedModules false --allowJs false --checkJs false --noEmit false",
    "build": "yarn build:types && NODE_ENV=production BABEL_ENV=production babel src --out-dir build --extensions '.ts,.js' --source-maps --ignore 'src/**/*.spec.ts,src/**/*.spec.js,src/**/*.test.ts,src/**/*.test.js,src/eslint-no-cry.js'",
    "prebuild": "yarn clean && yarn fix && yarn lint && yarn checktypes",
    "checktypes": "tsc",
    "checkEslint": "eslint --print-config .eslint.json | eslint-config-prettier-check",
    "lint": "eslint 'src/**/*.+(js|ts)'",
    "fix": "prettier-eslint 'src/**/*.+(js|ts)' --write",
    "clean": "rm -rf build"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "author": {
    "name": "Juan M. Ca√±abate (@juanmait)"
  },
  "keywords": [
    "scaffolding",
    "typescript",
    "prettier",
    "jest"
  ],
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "prettier-eslint-cli": "^5.0.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn fix-ts",
      "yarn lint-ts",
      "yarn checkTypes"
    ],
    "*.{js}": [
      "yarn fix-js",
      "yarn lint-js"
    ]
  },
  "files": [
    "build",
    "README.md",
    "CHANGELOG.md"
  ]
}
