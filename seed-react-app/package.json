{
  "name": "seed-react-app",
  "description": "This is a react app created with create-react-app (no _eject_) with some additions for better DX.",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build ",
    "test": "react-scripts test --watchAll=false",
    "prebuild": "yarn clean && yarn fix && yarn lint && yarn checkTypes",
    "checkTypes": "tsc --skipLibCheck false",
    "checkConflicts": "yarn checkTslint && yarn checkEslint",
    "checkTslint": "tslint-config-prettier-check ./tslint.json",
    "checkEslint": "eslint --print-config . | eslint-config-prettier-check",
    "fix": "concurrently \"yarn fix-ts\" \"yarn fix-js\"",
    "lint": "concurrently \"yarn lint-ts\" \"yarn lint-js\"",
    "lint-ts": "tslint 'src/**/*.{ts}'",
    "lint-js": "eslint 'src/**/*.js'",
    "fix-ts": "prettier-tslint fix 'src/**/*.ts'",
    "fix-js": "prettier-eslint 'src/**/*.js' --write",
    "clean": "rm -rf build"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "author": {
    "name": "Juan M. CaÃ±abate (@juanmait)"
  },
  "keywords": [
    "scaffolding",
    "typescript",
    "prettier",
    "jest"
  ],
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-react-require": "^3.1.1",
    "concurrently": "^4.1.1",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react-app-fix-override": "^4.0.1",
    "eslint-plugin-flowtype": "^3.11.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "prettier-eslint-cli": "^5.0.0",
    "react-scripts": "^3.0.1",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn fix-ts",
      "yarn lint-ts",
      "yarn checkTypes"
    ],
    "*.{js}": [
      "yarn fix-js",
      "yarn lint-js"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
