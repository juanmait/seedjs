{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "impliedStrict": true,
    "allowImportExportEverywhere": false
  },
  "env": {
    "node": true,
    "browser": false
  },
  "extends": ["eslint:recommended", "prettier"],
  "overrides": [
    {
      "files": ["*.test.js", "*.spec.js", "__test__/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
